<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DemoXamarinWebview"
             x:Class="DemoXamarinWebview.MainPage">

    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Red">
            <StackLayout Orientation="Horizontal">
                <Button Text="Back" HorizontalOptions="Start" Clicked="backButtonClicked" />
                <Button Text="Forward" HorizontalOptions="EndAndExpand" Clicked="forwardButtonClicked" />
            </StackLayout>
        <WebView x:Name="webView" WidthRequest="1000" HeightRequest="1000" AutomationId="myWebview"/>
    </StackLayout>
</ContentPage>
